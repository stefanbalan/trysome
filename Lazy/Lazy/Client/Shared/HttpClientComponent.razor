@inject HttpClient HttpClient

@code {

    protected async Task<T?> GetById<T>(string apiUrl, int id)
    {
        try
        {
            var result = await HttpClient.GetFromJsonAsync<T>($"{apiUrl}/{id}");
            return result;
        }
        catch (Exception e)
        {
    //todo show toast message and stop navigation
            return default(T);
        }
    }

    protected async Task DeleteById(string apiUrl, int id)
        {
            try
            {
                await HttpClient.DeleteAsync($"{apiUrl}/{id}");
            }
            catch (Exception e)
            {
    //todo show toast message and stop navigation
            }
        }
    }

